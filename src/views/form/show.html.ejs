<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
    </head>
    <body>
        <h1>Te Recomendamos los siguientes productos:</h1>
        <% recomendations.forEach((recomendation) => { %>
        <button type="button" class="collapsible"><%= recomendation %></button>
        <div class="content">
            <ul>
                <% productsList.forEach((product) => { %>
                    <% if (recomendation == product.category) { %>
                        <li><%= product.brandName %> - <%= product.modelName %></br>Precio: <%= product.price %></br>Descripci√≥n: <%= product.description %></li>
                        <!-- <%= console.log("TENEMOS", product.url ) %> -->
                        <a><img style="height: 400pt" class="media" src="<%= product.url %>" /></a>
                    <% } %>
                <% }) %>
            </ul>
        </div>
        <% }); %>
    </body>
    <script >
        var coll = document.getElementsByClassName("collapsible");
        var i;
        for (i = 0; i < coll.length; i++) {
          coll[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.maxHeight){
              content.style.maxHeight = null;
            } else {
              content.style.maxHeight = content.scrollHeight + "px";
            }
          });
        } 
    </script>
</html>
